<%= form_for @product do |f| %>
  <%= f.label :name, "Name of the product" %>
  <%= f.text_field :name %>
  <%= f.label :category, "Category of the product" %>
  <%= f.text_field :category %>
  <%= f.label :description, "Description of the product" %>
  <%= f.text_field :description %>
  <%= f.label :price, "Price of the product" %>
  <%= f.text_field :price %>
  <%= f.submit %>
<% end %>
